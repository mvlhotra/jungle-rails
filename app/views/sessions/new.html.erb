<style>
.field{
  padding-bottom: 40px;
}
</style>

<h1>Login</h1>

<%= form_tag '/login' do %>
  <div class="form-group field">
    <%=label :email, "Email:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :email, "", class: "form-control"%>
    </div>
  </div>
  <div class="form-group field">
    <%=label :password, "Password:", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%=text_field_tag :password, "", class: "form-control"%>
    </div>
  </div> 
  <%= submit_tag "Submit", class:"btn btn-primary center-block" %>

<% end %>